<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/bottom_btn3"
                android:scaleType="centerCrop" />

            <TextView
                android:text="Rak Vanchhai"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rakvanchhai05.com"
                android:textColor="#777"
                android:textSize="14sp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_backround"
                android:backgroundTint="#07758C"
                android:text="Edit Profile"
                android:textSize="14sp"
                android:textColor="#fff" />
        </LinearLayout>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Item -->
                <LinearLayout
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/languge"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Languages"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/baseline_dark_mode_24"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Dark Mode"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>

                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location" />


                    <TextView
                        android:text="Location"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Share to your friend"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/conditions"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Conditions"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/chat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Comments"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:src="@drawable/rate"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Rate"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>
                <LinearLayout
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/logout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:text="Logout"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:src="@drawable/arrow_forward"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
